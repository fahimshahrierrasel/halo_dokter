<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.treebricks.dokuter.RegistrationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/logo_name"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="10dp"
            android:src="@drawable/logo_2"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_name"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_user_24dp"
                android:drawablePadding="16dp"
                android:hint="@string/username"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:padding="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:drawableStart="@drawable/ic_user_24dp" />


            <EditText
                android:id="@+id/phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="16dp"
                android:hint="@string/phone_no"
                android:inputType="phone"
                android:maxLength="35"
                android:padding="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:drawableStart="@drawable/ic_phone_black_24dp" />


            <EditText

                android:id="@+id/dateofbirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_special_day"
                android:drawablePadding="16dp"
                android:hint="@string/date_of_birth"
                android:inputType="date"
                android:maxLength="35"
                android:padding="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:drawableStart="@drawable/ic_special_day" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_password_lock_24dp"
                android:drawablePadding="16dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="35"
                android:padding="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:drawableStart="@drawable/ic_password_lock_24dp" />

            <EditText
                android:id="@+id/confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_password_lock_24dp"
                android:drawablePadding="16dp"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:maxLength="35"
                android:padding="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:drawableStart="@drawable/ic_password_lock_24dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_register"
                android:text="@string/register"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
