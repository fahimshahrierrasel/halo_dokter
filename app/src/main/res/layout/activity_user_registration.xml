<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a854d4"
    tools:context="com.treebricks.dokuter.UserRegistration">

    <LinearLayout
        android:id="@+id/logo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_chef"
            android:layout_width="150sp"
            android:layout_height="120sp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/logo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="textPersonName"
            android:hint="User Name"
            android:drawablePadding="16dp"
            android:maxLength="15"
            android:drawableLeft="@drawable/ic_user_24dp"
            android:textColorHint="#dddddd"
            android:textColor="#ffffff"
            android:textCursorDrawable="@null" />

        <requestFocus />

        <EditText
            android:id="@+id/phoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="true"
            android:hint="Phone No"
            android:inputType="number"
            android:drawableLeft="@drawable/ic_phone24dp"
            android:drawablePadding="16dp"
            android:maxLength="35"
            android:textColorHint="#dddddd"
            android:textColor="#ffffff"
            android:textCursorDrawable="@null" />
        <requestFocus />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/datepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:drawableLeft="@drawable/ic_date_24dp"
                android:background="#20d2bb"
                android:padding="5dp"/>
            <EditText

                android:id="@+id/dateofbirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:singleLine="true"
                android:layout_toRightOf="@id/datepicker"
                android:layout_alignBottom="@id/datepicker"
                android:hint="Date of Birth"
                android:inputType="date"
                android:maxLength="35"
                android:textColorHint="#dddddd"
                android:textColor="#ffffff"
                android:textCursorDrawable="@null" />
            <requestFocus />
        </RelativeLayout>


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="true"
            android:hint="Password"
            android:maxLength="35"
            android:drawableLeft="@drawable/ic_password_lock_24dp"
            android:textColorHint="#dddddd"
            android:drawablePadding="16dp"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textCursorDrawable="@null" />

        <requestFocus />
        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:drawableLeft="@drawable/ic_password_lock_24dp"
            android:maxLength="35"
            android:drawablePadding="16dp"
            android:textColorHint="#dddddd"
            android:textColor="#ffffff"
            android:textCursorDrawable="@null" />

        <requestFocus />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f64c73"
            android:text="Register"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:drawableRight="@drawable/ic_arrowgo_24dp"
            android:layout_margin="20dp"/>
    </LinearLayout>
</RelativeLayout>
